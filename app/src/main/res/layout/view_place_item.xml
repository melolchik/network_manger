<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/place_image_check"
                android:padding="10dp" >

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <com.melolchik.networkmanager.ui.view.custom.CustomFontTextView
            android:id="@+id/place_name"
            style="@style/Widget.TextView.PlaceItem.Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.melolchik.networkmanager.ui.view.custom.CustomFontTextView
            android:id="@+id/place_address"
            style="@style/Widget.TextView.PlaceItem.Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/place_image_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/tick_white"/>
</RelativeLayout>