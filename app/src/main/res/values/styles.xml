<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ErrorTextInputLayout" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="HintTextInputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textColorHint"> @color/color_white_op70</item>
        <item name="android:textSize">9dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="Widget.Edit.Text" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/color_white_op70</item>
        <item name="android:textColorHint"> @color/color_white_op70</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">9dp</item>
        <item name="customFont">roboto_regular</item>
    </style>


    <style name="Widget.TextView.Header" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">9dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="customFont">roboto_bold</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.TextView.EmptyText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:background">@drawable/shape_black_rounded_rectangle</item>
        <item name="customFont">roboto_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white_op60</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.TextView.PlaceItem.Name" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="customFont">sf_ui_regular</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.TextView.PlaceItem.Address" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="customFont">roboto_regular</item>
        <item name="android:textColor">@color/color_white_op60</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
